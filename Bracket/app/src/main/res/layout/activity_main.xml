<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bracket"
        android:fontFamily="sans-serif-medium"
        android:textSize="@dimen/textSize1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/layout_marginTopTitle"
        android:textColor="@color/azul5"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewImage"
        android:layout_width="@dimen/widthIMG"
        android:layout_height="@dimen/heightIMG"
        app:cardCornerRadius="@dimen/radius"
        android:layout_marginTop="@dimen/radius"
        android:layout_marginTop="64dp"
        android:textColor="@color/azul6"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewImage"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:cardCornerRadius="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintBottom_toTopOf="@id/linearButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/figura_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/espadas2"
            android:src="@drawable/game"
            android:scaleType="fitCenter"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardViewImage"
        >

        <Button
            android:id="@+id/botonAgregarTorneo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar torneo"
            android:drawableLeft="@drawable/add"
            android:drawablePadding="@dimen/buttonPadding"
            android:paddingStart="@dimen/buttonStart"
            android:text="@string/agregar_torneo"
            android:drawablePadding="8dp"
            android:paddingStart="8dp"
            android:background="@drawable/fondobtn"
            android:paddingEnd="@dimen/buttonStart"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center"
            android:textSize="@dimen/buttontext"
            android:textSize="20dp"
            android:drawableLeft="@drawable/add"
            android:textColor="@color/azul5"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
